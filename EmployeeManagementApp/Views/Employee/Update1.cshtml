@{
    ViewBag.Title = "Update1";
}
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>更新画面</title>
</head>
<body>
    <div>
        <h1>社員情報更新</h1>
        以下の項目を入力してください。
    </div>
