<form action="/Employee/Update2" method="post">
    <table border="1">
        <tr>
            <th>ID</th>
            <th><input type="text" name="id" /> </th>
        </tr>
        <tr>
            <th>名前</th>
            <th><input type="text" name="name" /> </th>
        </tr>
        <tr>
            <th>給与</th>
            <th><input type="text" name="salary" /> </th>
        </tr>
        <tr>
            <th>誕生日</th>
            <th><input type="text" name="birthday" /> </th>
        </tr>
        <tr>
            <th>入社日</th>
            <th><input type="text" name="entryday" /> </th>
        </tr>
        <tr>
            <th>部署ID</th>
            <th><input type="text" name="departmentid" /> </th>
        </tr>
    </table>
    <input type="submit" value="更新" />
</form>