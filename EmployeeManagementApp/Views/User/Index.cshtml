@model IEnumerable<EmployeeManagementApp.Models.loginuser>

@{
    ViewBag.Title = "ログインユーザ一覧";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("新規登録", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.password)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            ••••••••
        </td>
        <td>
            [ @Html.ActionLink("変更", "Edit", new { id=item.id }) ]
            [ @Html.ActionLink("詳細", "Details", new { id=item.id }) ]
            [ @Html.ActionLink("削除", "Delete", new { id=item.id }) ]
        </td>
    </tr>
}

</table>
